<%= form_for(like.likes.new, {:url => post_like_like_path, :method => 'put'}) do |f| %>
  <div class="form_hide">
    <div class="field">
      <%= f.label :likeable_id %><br />
      <%= f.number_field :likeable_id, {:value => like.id, :readonly => true} %>
    </div>
    <div class="field">
      <%= f.label :user_id %><br />
      <%= f.text_field :user_id, {:value => current_user.id, :readonly => true} %>
    </div>
  </div>
  
  <% liked_name = User.find(like.user_id).name %>
  <% if !like.likes.empty? && !like.likes.where(:user_id => current_user.id).blank? %>
  	<span class="icon_liked" style="color:#646869;"><%= liked_name %></span> 
  <% else %>
  	<%= f.submit liked_name, :class => 'like_button icon_like' %>
  <% end %>
<% end %>
